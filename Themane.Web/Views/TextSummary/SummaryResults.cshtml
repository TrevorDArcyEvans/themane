@model Themane.Web.Models.SummaryResults

@{
  ViewData["Title"] = "Summary Results";
}

<style>
  .collapsible
  {
    background-color: #eee;
    color: #444;
    cursor: pointer;
    padding: 18px;
    width: 100%;
    border: none;
    text-align: left;
    outline: none;
    font-size: 15px;
  }

    .collapsible:after
    {
      content: '\02795'; /* Unicode character for "plus" sign (+) */
      font-size: 13px;
      color: white;
      float: right;
      margin-left: 5px;
    }

  .active:after
  {
    content: "\2796"; /* Unicode character for "minus" sign (-) */
  }

  .active, .collapsible:hover
  {
    background-color: #ccc;
  }

  .content
  {
    padding: 0 18px;
    display: none;
    overflow: hidden;
    background-color: #f1f1f1;
    overflow-y: auto;
    width: 100%;
    min-height: 20%;
    min-width: 100%;
    max-width: 100%;
  }

  .copy
  {
    margin-top: 5px;
  }
</style>

<div>
  <h2>Summary Results</h2>
  <hr />
  <button class="collapsible">Input</button>
  @Html.TextAreaFor(model => model.Input, htmlAttributes: new { @class = "form-control content", @readonly = true, @rows = "50" })
  <hr />

  <button class="collapsible">Text Rank</button>
  @Html.TextAreaFor(model => model.TextRank, htmlAttributes: new { @class = "form-control content", @readonly = true, @rows = "50" })
  <button onclick="CopyText('TextRank')" class="btn btn-default copy">Copy text</button>
  <hr />

  <button class="collapsible">Open Text Summarizer</button>
  @Html.TextAreaFor(model => model.OpenTextSummarizer, htmlAttributes: new { @class = "form-control content", @readonly = true, @rows = "50" })
  <button onclick="CopyText('OpenTextSummarizer')" class="btn btn-default copy">Copy text</button>
  <hr />

  <button class="collapsible">CodePlex Open Text Summarizer</button>
  @Html.TextAreaFor(model => model.CodePlexOpenTextSummarizer, htmlAttributes: new { @class = "form-control content", @readonly = true, @rows = "50" })
  <button onclick="CopyText('CodePlexOpenTextSummarizer')" class="btn btn-default copy">Copy text</button>
  <hr />

  <script>
    function CopyText(id)
    {
      /* Get the text field */
      var copyText = document.getElementById(id);

      /* Select the text field */
      copyText.select();

      /* Copy the text inside the text field */
      document.execCommand("copy");
    }

    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++)
    {
      coll[i].addEventListener("click", function ()
      {
        this.classList.toggle("active");
        var content = this.nextElementSibling;
        if (content.style.display === "block")
        {
          content.style.display = "none";
        } else
        {
          content.style.display = "block";
        }
      });
    }
  </script>
</div>
<div>
  <a asp-action="Index">Back</a>
</div>
